{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json",
          "e2e/tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/ng-cli-compat",
        "plugin:@angular-eslint/ng-cli-compat--formatting-add-on",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "curly": 2,
        "indent": [
          "error",
          2
        ],
        "member-access": 0,
        "no-console": [
          "error",
          {
            "allow": [
              "log",
              "error"
            ]
          }
        ],
        "no-debugger": 2,
        "no-empty": 0,
        "no-eval": 2,
        "no-string-literal": 0,
        "object-literal-sort-keys": 0,
        "prefer-const": 2,
        "radix": 2,
        "quotes": [
          "error",
          "single"
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "component-selector": [
          true,
          "element",
          "gal",
          "kebab-case"
        ],
        "@typescript-eslint/consistent-type-definitions": "error",
        "@typescript-eslint/dot-notation": "off",
        "@typescript-eslint/explicit-member-accessibility": [
          "off",
          {
            "accessibility": "explicit"
          }
        ],
        "@typescript-eslint/no-use-before-define": "error",
        "brace-style": [
          "error",
          "1tbs"
        ],
        "no-bitwise": "off",
        "prefer-template": "error"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "curly": 2,
        "indent": [
          "error",
          2
        ],
        "member-access": 0,
        "no-console": [
          "error",
          {
            "allow": [
              "log",
              "error"
            ]
          }
        ],
        "no-debugger": 2,
        "no-empty": 0,
        "no-eval": 2,
        "no-string-literal": 0,
        "object-literal-sort-keys": 0,
        "prefer-const": 2,
        "radix": 2,
        "quotes": [
          "error",
          "single"
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "component-selector": [
          true,
          "element",
          "gal",
          "kebab-case"
        ],
        "@typescript-eslint/consistent-type-definitions": "error",
        "@typescript-eslint/dot-notation": "off",
        "@typescript-eslint/explicit-member-accessibility": [
          "off",
          {
            "accessibility": "explicit"
          }
        ],
        "@typescript-eslint/no-use-before-define": "error",
        "brace-style": [
          "error",
          "1tbs"
        ],
        "no-bitwise": "off",
        "prefer-template": "error"
      }
    }
  ]
}